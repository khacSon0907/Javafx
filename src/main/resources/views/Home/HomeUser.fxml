<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.coffeeshop.coffeeshop.controller.HomeUserController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to right, #6F4E37, #8D6E63); -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
            <Label text="☕ Coffee Shop" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Label fx:id="lblWelcome" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Đăng xuất" onAction="#handleLogout"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 15; -fx-padding: 8 16; -fx-cursor: hand;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: linear-gradient(to bottom, #f5f5f5, #e8e8e8);">
            <Button fx:id="btnCheckIn" text="Chấm công" minWidth="200" onAction="#handleCheckIn"
                    style="-fx-background-color: linear-gradient(to bottom, #4caf50, #45a049); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-padding: 15;" />
            <Button fx:id="btnOrderDrink" text="Order nước" minWidth="200" onAction="#handleOrderDrink"
                    style="-fx-background-color: linear-gradient(to bottom, #2196f3, #1976d2); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-padding: 15;" />
            <Button fx:id="btnViewOrder" text="Xem order" minWidth="200" onAction="#handleViewOrder"
                    style="-fx-background-color: linear-gradient(to bottom, #9c27b0, #7b1fa2); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-padding: 15;" />
            <Button fx:id="btnCashier" text="Xuất hoá đơn" minWidth="200" onAction="#handleCashier"
                    style="-fx-background-color: linear-gradient(to bottom, #ff9800, #f57c00); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-padding: 15;" />
            <Button fx:id="btnKitchen" text="Pha chế" minWidth="200" onAction="#handleKitchen"
                    style="-fx-background-color: linear-gradient(to bottom, #8bc34a, #689f38); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-padding: 15;" />
        </VBox>
    </center>

</BorderPane>